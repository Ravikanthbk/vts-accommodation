<% content_for :title, "Registration" %>

<% content_for :nav, "registration" %>

<div class="header">Program Registration</div>
<table border="0" width="95%" align="center" style="margin: 0 auto;">
	<tr><td>
		<p><strong>Note: Registrations related to WING, please first inform and get permission from your wing coordinator.</strong></p>
	</td></tr>
</table>
<table border="0" width="85%" align="center" style="margin: 0 auto;">
	<tr><td><%= error_messages_for 'registration'%></td></tr>
</table>

<div id="error_message" class="error_message" style="display: none;">
	<%= @message %>
	<ul id="errors"></ul>
</div>

<% form_tag( {:action => 'create'}, :id => 'registrtionForm', :name => 'registrtionForm' ) do %>

	<table border="0" width="90%" cellspacing="4" cellpadding="2" align="center" style="margin: 10px auto;">
		<tr><td colspan="4" align="right"><span class="req">*</span> Indicates Required Field</td></tr>
		
		<tr>
			<td>Program Name <span class="req">*</span></td>
			<td colspan="3">
				<select class="select" id="event" name="registration[event_id]" style="width: 370px;" >
					<option value="0"></option>
					<% @events.each do |event| -%>
						<option value="<%= event.id %>"><%= event.event_name %></option>
					<% end -%>
				</select>
			</td>
		</tr>

        <% if @user.id == 1 && @user.centre_id == 4068 -%>
        <tr>
            <td>Centre Name <span class="req">*</span></td>
            <td>
                <select id="get_centre_list" class="select" name="registration[centre_id]">
                    <option value=""></option>
                    <% @centres.each do |centre| -%>
                        <option value="<%= centre.id %>"><%= centre.name %></option>
                    <% end -%>
                </select>
            </td>
        </tr>
        <% end -%>

		<%= render :partial => 'form' %>
	
		<tr><td colspan="8" align="center"><%= submit_tag "Register", :id => "register", :class => "button" %></td></tr>
	</table>

<% end %>

